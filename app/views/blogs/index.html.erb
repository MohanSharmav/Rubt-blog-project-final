<h1>Blogs</h1>



<table class="table table-striped table-bordered table-hover">
<thead class="thread-dark">
<tr>

<tr>
<th>title</th>
<th> textBody</th>

<th> category</th>
<th> user_id</th>
</tr>
</thead>

<tbody>
<% @blogs.each do |blog| %>
<tr>
  
  <td><%= blog.title %></td>
  <td><%= blog.textBody %></td>
  <td><%= blog.category %></td>
  
<td><%= blog.user_id %> </td>
 <td> <%= link_to "Show this blog", blog ,class: "btn btn-outline-danger btn-sm" %></td>
  
  <td><%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>

</tr>
<% end %>
</tbody>
</table>

